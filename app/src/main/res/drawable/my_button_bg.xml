
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#c69f56"/>
            <stroke android:color="#937f3f"
                android:width="2dp"
                />
            <corners android:radius="55dp"/>
            <padding android:bottom="8pt"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>

    </item>

    <item  >
        <shape>
            <gradient android:startColor="#ed9745"
                android:endColor="#93743f"/>
            <stroke android:color="#93783f"
                android:width="2dp"
                />
            <corners android:radius="8dp"/>
            <padding android:bottom="8pt"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>

    </item>
</selector>